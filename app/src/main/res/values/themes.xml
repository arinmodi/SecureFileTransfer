<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VIDEO_SHARE_APP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.VIDEO_SHARE_APP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VIDEO_SHARE_APP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VIDEO_SHARE_APP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BottomNavigation" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/black</item>
    </style>

</resources>